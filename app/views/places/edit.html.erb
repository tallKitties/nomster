<div class="booyah-box col-10 offset-1">
  <h1>Edit details for <%= @place.name %></h1>
  <hr><br>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <hr>
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>